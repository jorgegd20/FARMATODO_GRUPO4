@{
    Layout="_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 col-xl-6 offset-xl-3">
            <div class="card login-logout-tab" id="panelAuto">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item w-50">
                            <a href="/Acceso/IniciarSesion" class="nav-link text-center">Iniciar Sesi√≥n</a>
                        </li>
                        <li class="nav-item w-50">
                            <a href="/Acceso/CrearCuenta" class="nav-link text-center">Crear Cuenta</a>
                        </li>
                    </ul>
                </div>
                <div class="card-content">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("Scripts", required: false)

    <script>
        $(function(){
            var current=location.pathname;
            $('.nav-tabs li a').each(function(){
                var $this=$(this);
                if(current.indexOf($this.attr('href'))!==-1){
                    //$this.removeClass("active");
                    $this.addClass('active_color');
                }else{
                    $this.addClass('inActive_color');
                }
            })
        })
    </script>
}

